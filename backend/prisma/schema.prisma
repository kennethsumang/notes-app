// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int @id @default(autoincrement())
  name              String
  email             String
  password          String
  email_verified_at String?
  createdOn         DateTime
  updatedOn         DateTime?

  notes Note[]
}

model Note {
  id        String @id @default(uuid())
  userId    Int
  title     String
  content   String
  parent    String?
  createdOn DateTime
  updatedOn DateTime?

  user User @relation(fields: [userId], references: [id])
}